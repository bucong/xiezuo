/* pages/checkAccept/checkAccept.wxss */
.page-box{
  padding: 40rpx 30rpx 0 30rpx;
}
.title{
  height: 100rpx;
  font-size: 32rpx;
  color: #3370FF;
  line-height: 100rpx;
  padding: 0 40rpx 0 20rpx;
  border: 2rpx solid #FAFAFA;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.04);
}
.list{
  border-bottom: 2rpx solid #F2F2F2;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}
.list.flex{
  padding: 0 40rpx 0 20rpx;
}
.list.flex text{
  color: #C3C9D2;
}
.btn-box{
  width: 560rpx;
  margin: 180rpx auto 0 auto;
}
.sub{
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background: #3370ff;
  border-radius: 30rpx;
  font-size: 28rpx;
  box-shadow: 0 16rpx 20rpx rgba(100,146,255,0.3);
}
.btn-box .all{
  background: #FF6161;
  box-shadow: 0 16rpx 20rpx rgba(255,97,97,0.3);
}
.btn-box navigator{
  margin: 0 auto;
  text-align: center;
}
.send-email{
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 36rpx 0;
}
.icon-email{
  width: 32rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.icon-right{
  width: 12rpx;
  height: 20rpx;
  margin-left: 40rpx;
}
.meng{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0,0,0,.8);
}
.meng .meng-box{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 600rpx;
  height: 444rpx;
  background: #fff;
  border-radius: 44rpx;
  text-align: center;
  z-index: 102;
}
.meng-tit{
  line-height: 110rpx;
  font-size: 36rpx;
  color: #333;
}
.meng .meng-box textarea{
  width: 560rpx;
  height: 190rpx;
  padding: 20rpx;
  background: #F5FAFC;
  text-align: left;
  font-size: 32rpx;
  border-top: 2rpx solid #E6E6E6;
  border-bottom: 2rpx solid #E6E6E6;
}
.meng .meng-box .flex text{
  display: block;
  width: 300rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #999;
}
.meng .meng-box .flex .meng-sub{
  color: #3370ff;
  border-left: 2rpx solid #E6E6E6;
}