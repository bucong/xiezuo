/* pages/design/design.wxss */
.title{
  line-height: 80rpx;
  background: #f5fafc;
  color: #3370ff;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.title text{
  color: #999;
}
.imgs{
  padding: 20rpx 0 20rpx 12rpx;
}
.imgs view{
  display: inline-block;
  width: 172rpx;
  height: 172rpx;
  margin-right: 8rpx;
  border: 1rpx solid #ddd;
}
.imgs image{
  width: 172rpx;
  height: 172rpx;
}
.sub{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background: #3370ff;
  border-radius: 30rpx;
  font-size: 28rpx;
  margin-top: 160rpx;
  box-shadow: 0 16rpx 20rpx rgba(100,146,255,0.3);
}
.send-email{
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 36rpx 0;
}
.icon-email{
  width: 32rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.icon-right{
  width: 12rpx;
  height: 20rpx;
  margin-left: 40rpx;
}
.big-img{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  z-index: 100;
}
.big-img image{
  width: 750rpx;
}
.meng{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  background: rgba(0,0,0,.6);
  z-index: 98;
}
.swiper-i{
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: auto;
}
.swiper-i::-webkit-scrollbar{
  display: none;
}