/* pages/designList/designList.wxss */
.head{
  text-align: center;
  height: 280rpx;
  color: #fff;
  position: relative;
  margin-bottom: 26rpx;
}
.head .bg{
  width: 750rpx;
  height: 280rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.head view{
  font-size: 44rpx;
  line-height: 60rpx;
  padding: 46rpx 0;
}
.head .proStatus{
  width: 40rpx;
  height: 40rpx;
}
.list-box{
  font-size: 28rpx;
}
.title{
  padding: 0 30rpx;
  color: #B0B9BF;
  background: #F5FAFC;
  height: 76rpx;
  line-height: 76rpx;
}
.list{
  line-height: 100rpx;
  height: 100rpx;
  margin: 0 30rpx;
  padding: 0 20rpx 0 10rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.list:last-child{
  border-bottom: none;
}
.list .name{
  width: 600rpx;
  color: #3370FF;
}
.list .angle{
  width: 12rpx;
  height: 20rpx;
}
.meng{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background: rgba(0,0,0,.6);
}
.meng-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 102;
  width: 600rpx;
  height: 520rpx;
  background: #fff;
  border-radius: 44rpx;
  text-align: center;
}
.meng .close{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}
.meng-tit{
  padding-top: 30rpx;
  padding-bottom: 66rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  color: #333;
}
.meng-icon{
  width: 120rpx;
  height: 102rpx;
}
.meng-info{
  padding: 40rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  padding-bottom: 46rpx;
}
.meng button{
  width: 460rpx;
  height: 76rpx;
  line-height: 76rpx;
  border: none;
  background: #3370FF;
  border-radius: 38rpx;
  color: #fff;
  font-size: 28rpx;
}