/* pages/history/history.wxss */
page{
  background: #f5f7f9;
}
.head{
  text-align: center;
  height: 280rpx;
  color: #fff;
  position: relative;
}
.head .bg{
  width: 750rpx;
  height: 280rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.head view{
  font-size: 44rpx;
  line-height: 60rpx;
  padding: 46rpx 0;
}
.head .proStatus{
  width: 40rpx;
  height: 40rpx;
}
.list-box{
  margin: 54rpx 60rpx 0 74rpx;
  border-left: 2rpx dashed #DFE4EC;
}
.list{
  width: 480rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 60rpx;
  margin-left: 56rpx;
  position: relative;
  padding: 24rpx 40rpx;
  font-size: 24rpx;
  line-height: 44rpx;
}
.list-box .list image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  left: -72rpx;
}
.list .time{
  color: #999;
}
.list .status{
  color: #249B23;
}
.list .operation text{
  color: #3370FF;
}
.list .solve{
  color: #999;
}
.list .solve text{
  display: inline-block;
  width: 120rpx;
}
.consult{
  position: fixed;
  right: 20rpx;
  bottom: 40rpx;
}
.consult image{
  width: 120rpx;
  height: 120rpx;
}