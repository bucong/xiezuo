/* pages/peopleInfo/peopleInfo.wxss */
.list{
  padding: 0 30rpx;
  margin-bottom: 700rpx;
}
.list view{
  border-bottom: 2rpx solid #F2F2F2;
  height: 100rpx;
}
.list text{
  display: block;
  width: 200rpx;
  font-size: 28rpx;
  text-indent: 16rpx;
}
.list input{
  width: 480rpx;
  font-size: 28rpx;
  color: #3370FF;
}
button{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #3370FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 16rpx 20rpx rgba(100,146,255,0.3);
}